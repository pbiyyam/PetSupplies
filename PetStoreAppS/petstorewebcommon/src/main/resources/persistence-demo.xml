<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" 
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
      
      <persistence-unit name="PrimaryPersistenceUnit" transaction-type="RESOURCE_LOCAL"> 
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
     	<class>com.petstore.web.beans.UserDetails</class>
      	<class>com.petstore.web.beans.RoleDetails</class>
      	<class>com.petstore.web.beans.Category</class>
      	<class>com.petstore.web.beans.Product</class>
      <properties>
      	<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
      </properties>
   </persistence-unit>
   
</persistence>